# EditorConfig
# http://EditorConfig.org
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

[*.rb]
max_line_length = 80

[*.php]
indent_size = 4
max_line_length = 120
tab_width = 4

[*.{coffee,css,less,js,sass,scss}]
indent_size = 4
max_line_length = 120
tab_width = 4

[*.{json,md,yml}]
insert_final_newline = false
