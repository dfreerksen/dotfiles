# EditorConfig
# http://EditorConfig.org
# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

[*.{css,coffee,js,less,php,scss,sass}]
max_line_length = 120

[*.rb]
max_line_length = 80

[*.{css,less,php,scss,sass}]
indent_size = 4
tab_width = 4

[*.{json,md,yml}]
insert_final_newline = false
